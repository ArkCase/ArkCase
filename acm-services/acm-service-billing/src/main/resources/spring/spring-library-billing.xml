<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="billingDao" class="com.armedia.acm.services.billing.dao.BillingDao"/>

    <bean id="billingItemEventPublisher" class="com.armedia.acm.services.billing.model.BillingItemEventPublisher"/>

    <bean id="billingService" class="com.armedia.acm.services.billing.service.impl.BillingServiceImpl">
        <property name="billingDao" ref="billingDao"/>
    </bean>

    <bean id="billingItemToSolrTransformer" class="com.armedia.acm.services.billing.service.BillingItemToSolrTransformer">
        <property name="billingDao" ref="billingDao"/>
        <property name="userDao" ref="userJpaDao"/>
    </bean>

    <bean id="billingAcmTaskActivitiEventHandler" class="com.armedia.acm.services.billing.service.BillingAcmTaskActivitiEventHandler">
        <property name="billingService" ref="billingService"/>
        <property name="acmTimesheetDao" ref="acmTimesheetDao"/>
        <property name="acmCostsheetDao" ref="acmCostsheetDao"/>
    </bean>

</beans>