<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="cmValueLength" value="4000" dbms="postgresql,oracle"/>
    <property name="cmValueLength" value="255" dbms="mysql"/>

    <property name="cmDescriptionLength" value="4000" dbms="postgresql,oracle"/>
    <property name="cmDescriptionLength" value="255" dbms="mysql"/>

    <property name="cmApproverUserIdLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmApproverUserIdLength" value="255" dbms="mysql"/>


    <changeSet id="01-create-form-table" author="tsedalu">
        <createTable tableName="acm_form_type_lu">
            <column name="cm_id" type="${idType}" autoIncrement="${autoIncrement}">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="pk_form_type"/>
            </column>
            <column name="cm_value" type="VARCHAR(${cmValueLength})">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="cm_order" type="NUMBER(32,0)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="cm_description" type="VARCHAR(4000)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_status" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_created" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_creator" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modified" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modifier" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
          
        </createTable>
    
    </changeSet>

    <changeSet id="forms-02-form-approvers-table" author="dmiller">
        <createTable tableName="acm_form_approver">
            <column name="cm_parent_id" type="${fkIdType}"/>
            <column name="cm_approver_user_id" type="VARCHAR(${cmApproverUserIdLength})">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey
                tableName="acm_form_approver"
                columnNames="cm_parent_id, cm_approver_user_id"
                constraintName="pk_form_approver"/>
    </changeSet>

    <changeSet id="forms-03-form-approvers-table-not-needed-anymore" author="dmiller">
        <dropTable tableName="acm_form_approver"/>
    </changeSet>

    

</databaseChangeLog>

