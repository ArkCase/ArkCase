<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="wopiUsersApiController" class="com.armedia.acm.services.wopi.api.WopiUserApiController"/>

    <bean id="wopiFilesApiController" class="com.armedia.acm.services.wopi.api.WopiFilesApiController">
        <property name="wopiService" ref="wopiAcmService"/>
    </bean>

    <bean id="wopiResourceApiController" class="com.armedia.acm.services.wopi.api.WopiResourceApiController">
        <property name="resourceLocations" ref="wopiServiceProperties"/>
    </bean>

    <bean id="wopiUIController" class="com.armedia.acm.services.wopi.web.WopiHostUIController">
        <property name="tokenService" ref="authenticationTokenService"/>
    </bean>

</beans>