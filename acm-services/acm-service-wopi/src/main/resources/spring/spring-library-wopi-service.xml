<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="wopiAcmService" class="com.armedia.acm.services.wopi.service.WopiAcmService">
        <property name="ecmFileService" ref="ecmFileService"/>
        <property name="fileTransaction" ref="ecmFileTransaction"/>
        <property name="permissionEvaluator" ref="arkPermissionEvaluator"/>
        <property name="objectLockService" ref="objectLockService"/>
    </bean>

    <bean id="wopiServiceProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <!-- note: must leave "file:" at the start of the file name for spring
        to be able to read the file; otherwise it will try to read from the
        classpath -->
        <property name="location" value="file:${user.home}/.arkcase/acm/wopiService.properties"/>
        <property name="ignoreResourceNotFound" value="false"/>
        <property name="localOverride" value="false"/>
    </bean>

</beans>