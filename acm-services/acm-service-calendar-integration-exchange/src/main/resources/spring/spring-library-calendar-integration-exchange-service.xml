<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
       
        <bean id="baseCalendarEntityHandler" class="com.armedia.acm.calendar.service.integration.exchange.CalendarEntityHandlerBase" abstract="true">
            <property name="outlookDao" ref="exchangeWebServicesOutlookDao"/>
        </bean>

        <bean id="caseFileEntityHandler" class="com.armedia.acm.calendar.service.integration.exchange.CalendarCaseFileHandler"
                parent="baseCalendarEntityHandler"/>
        <bean id="complaintEntityHandler" class="com.armedia.acm.calendar.service.integration.exchange.CalendarComplaintHanlder"
                parent="baseCalendarEntityHandler"/>

        <bean id="calendarServiceProvider" class="com.armedia.acm.calendar.service.integration.exchange.ExchangeCalendarService">
            <property name="entityHandlers">
                <map>
                    <entry key="CASE_FILE" value-ref="caseFileEntityHandler"/>
                    <entry key="COMPLAINT" value-ref="complaintEntityHandler"/>
                </map>
            </property>
            <!-- <property name="outlookService" ref="outlookService"/> -->
            <property name="outlookDao" ref="exchangeWebServicesOutlookDao"/>
            <property name="calendarAdminService" ref="propertyFileCalendarAdminService"/>
        </bean>

</beans>