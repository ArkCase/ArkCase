<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="configApi" class="com.armedia.acm.services.config.web.api.ConfigApiController">
        <property name="configList" ref="configList"/>
    </bean>
    
    <bean id="lookupDao" class="com.armedia.acm.services.config.lookups.service.ConfigFileLookupDao">
        <property name="lookupsFileLocation" value="#{ systemProperties ['user.home'] }/.arkcase/acm/lookups/lookups.json"/>
    </bean>
    
    <bean id="lookupsApi" class="com.armedia.acm.services.config.lookups.web.api.LookupsApiController">
        <property name="configApiController" ref="configApi"/>
        <property name="lookupDao" ref="lookupDao"/>
    </bean>
</beans>
