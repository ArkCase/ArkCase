<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:https="http://www.mulesoft.org/schema/mule/https"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:jms="http://www.mulesoft.org/schema/mule/jms"
      xmlns:scripting="http://www.mulesoft.org/schema/mule/scripting"
      xmlns:cmis="http://www.mulesoft.org/schema/mule/cmis"
      version="CE-3.7.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/https http://www.mulesoft.org/schema/mule/https/current/mule-https.xsd
http://www.mulesoft.org/schema/mule/cmis http://www.mulesoft.org/schema/mule/cmis/current/mule-cmis.xsd
http://www.mulesoft.org/schema/mule/jms http://www.mulesoft.org/schema/mule/jms/current/mule-jms.xsd
http://www.mulesoft.org/schema/mule/scripting http://www.mulesoft.org/schema/mule/scripting/current/mule-scripting.xsd">

    <https:endpoint name="submitContentFilesSolrEndpoint"
                    address="https://${solr.host}:${solr.port}/${solr.contextRoot}/${solr.advancedsearch.core}/${solr.contentFileHandler}?overwrite=true&amp;literal.hidden_b=#[flowVars['hidden']]&amp;literal.parent_ref_s=#[flowVars['parentRef']]&amp;literal.status_lcs=#[flowVars['status']]&amp;literal.protected_object_b=#[flowVars['protectedObject']]&amp;literal.public_doc_b=#[flowVars['publicDoc']]&amp;literal.id=#[flowVars['docId']]&amp;literal.object_type_s=#[flowVars['objectType']]&amp;literal.object_id_s=#[flowVars['objectId']]&amp;literal.modified_date_tdt=#[flowVars['modified']]&amp;literal.modifier_lcs=#[flowVars['modifier']]&amp;literal.create_date_tdt=#[flowVars['created']]&amp;literal.creator_lcs=#[flowVars['creator']]&amp;literal.name=#[flowVars['name']]&amp;literal.parent_id_s=#[flowVars['parentId']]&amp;literal.parent_type_s=#[flowVars['parentType']]&amp;literal.parent_number_lcs=#[flowVars['parentName']]&amp;literal.title_parseable=#[flowVars['titleParseable']]&amp;literal.assignee_full_name_lcs=#[flowVars['assigneeFullName']]&amp;literal.type_lcs=#[flowVars['type']]&amp;literal.ext_s=#[flowVars['ext']]&amp;literal.creator_full_name_lcs=#[flowVars['creatorFullName']]&amp;literal.modifier_full_name_lcs=#[flowVars['modifierFullName']]&amp;literal.page_count_i=#[flowVars['pageCount']]&amp;literal.security_field_lcs=#[flowVars['securityField']]&amp;literal.cmis_repository_id_s=#[flowVars['cmisRepositoryId']]&amp;literal.parent_container_object_type_s=#[flowVars['parent_container_object_id_s']]&amp;literal.parent_container_object_type_s=#[flowVars['parent_container_object_type_s']]&amp;literal.name_lcs_partial=#[flowVars['name_lcs_partial']]"
                    encoding="UTF-8"
                    method="POST"
                    exchange-pattern="request-response"
                    contentType="#[flowVars['contentType']]"
                    doc:name="Send Content File to SOLR">
    </https:endpoint>

    <flow name="jmsSendContentFileToSolr"
          doc:name="Send Content File to SOLR"
          doc:description="Send documents to the SOLR advanced search collection.
                           Payload must be a POJO - SolrAdvancedSearchDocument.java">

        <jms:inbound-endpoint
                queue="solrContentFile.in"
                exchange-pattern="request-response"
                connector-ref="ActiveMQ-ACM"
                doc:name="JMS"/>

        <timer-interceptor/>

        <!-- NOTE: Intellij IDEA incorrectly claims scripting:transformer is not allowed here. This XML is valid. -->
        <scripting:transformer name="obtainCmisConfiguration">
            <scripting:script engine="groovy">
                <scripting:text><![CDATA[
                    import org.mule.module.cmis.connectivity.CMISCloudConnectorConnectionManager;

                    String cmisConfigurationId = message.getInboundProperty("additionalProperties").get("cmis_repository_id_s");
                    if ( cmisConfigurationId != null )
                    {
                        CMISCloudConnectorConnectionManager configuration = muleContext.registry.lookupObject(cmisConfigurationId);
                        message.setInboundProperty("configRef", configuration);
                    }

                    return payload;
                    ]]>
                </scripting:text>
            </scripting:script>
        </scripting:transformer>

        <logger category="com.armedia.acm.services.search.service" level="DEBUG"/>

        <!-- Starting with Mule 3.7 we need to specifically set the Content-Type in Mule to be able to
             index content files -->
        <message-properties-transformer name="arkContentTypeTransformer">
            <add-message-property key="Content-Type" value="#[message.payload.content_type]"/>
        </message-properties-transformer>

        <set-variable variableName="docId" value="#[message.payload.id]"/>
        <set-variable variableName="contentType" value="#[message.payload.content_type]"/>
        <set-variable variableName="objectType" value="#[message.payload.object_type_s]"/>
        <set-variable variableName="objectId" value="#[message.payload.object_id_s]"/>
        <set-variable variableName="created" value="#[message.payload.create_date_tdt]"/>
        <set-variable variableName="creator" value="#[message.payload.creator_lcs]"/>
        <set-variable variableName="modified" value="#[message.payload.modified_date_tdt]"/>
        <set-variable variableName="modifier" value="#[message.payload.modifier_lcs]"/>
        <set-variable variableName="name" value="#[java.net.URLEncoder.encode(message.payload.name,'UTF-8')]"/>
        <set-variable variableName="parentId" value="#[message.payload.parent_id_s]"/>
        <set-variable variableName="parentType" value="#[message.payload.parent_type_s]"/>
        <set-variable variableName="parentName" value="#[message.payload.parent_number_lcs]"/>
        <set-variable variableName="publicDoc" value="#[message.payload.public_doc_b]"/>
        <set-variable variableName="protectedObject" value="#[message.payload.protected_object_b]"/>
        <set-variable variableName="status" value="#[message.payload.status_lcs]"/>
        <set-variable variableName="parentRef" value="#[message.payload.parent_ref_s]"/>
        <set-variable variableName="hidden" value="#[message.payload.hidden_b]"/>
        <set-variable variableName="titleParseable" value="#[message.payload.title_parseable]"/>
        <set-variable variableName="assigneeFullName" value="#[message.payload.assignee_full_name_lcs]"/>
        <set-variable variableName="type" value="#[message.payload.type_lcs]"/>
        <set-variable variableName="ext" value="#[message.payload.ext_s]"/>
        <set-variable variableName="creatorFullName" value="#[message.inboundProperties.additionalProperties.creator_full_name_lcs]"/>
        <set-variable variableName="modifierFullName" value="#[message.inboundProperties.additionalProperties.modifier_full_name_lcs]"/>
        <set-variable variableName="pageCount" value="#[message.inboundProperties.additionalProperties.page_count_i]"/>
        <set-variable variableName="securityField" value="#[message.inboundProperties.additionalProperties.security_field_lcs]"/>
        <set-variable variableName="cmisRepositoryId" value="#[message.inboundProperties.additionalProperties.cmis_repository_id_s]"/>
        <set-variable variableName="parent_container_object_type_s" value="#[message.inboundProperties.additionalProperties.parent_container_object_type_s]"/>
        <set-variable variableName="parent_container_object_id_s" value="#[message.inboundProperties.additionalProperties.parent_container_object_id_s]"/>
        <set-variable variableName="name_lcs_partial" value="#[message.inboundProperties.additionalProperties.name_lcs_partial]"/>

        <logger category="com.armedia.acm.services.search.service" level="DEBUG"
                message="Doc ID: #[flowVars['docId']]"/>

        <cmis:get-content-stream
                config-ref="#[message.inboundProperties.configRef]"
                objectId="#[message.payload.ecmFileId]"/>

        <set-payload value="#[message.payload.stream]"/>

        <https:outbound-endpoint ref="submitContentFilesSolrEndpoint">
            <response>
                <object-to-string-transformer/>
            </response>
        </https:outbound-endpoint>
    </flow>

</mule>
