<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:https="http://www.mulesoft.org/schema/mule/https"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:jms="http://www.mulesoft.org/schema/mule/jms"
      version="CE-3.7.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/https http://www.mulesoft.org/schema/mule/https/current/mule-https.xsd
http://www.mulesoft.org/schema/mule/jms http://www.mulesoft.org/schema/mule/jms/current/mule-jms.xsd">


    <https:endpoint name="submitQuicksearchDocumentsSolrEndpoint"
                   address="https://${solr.host}:${solr.port}/${solr.contextRoot}/${solr.quicksearch.core}/${solr.updateHandler}?overwrite=true"
                   contentType="application/json; charset=UTF-8"
                   mimeType="application/json"
                   encoding="UTF-8"
                   method="POST"
                   exchange-pattern="request-response"
                   doc:name="Send Quick Search Docs to SOLR">
    </https:endpoint>

    <flow name="jmsSendToQuickSearchSolr"
          doc:name="Send to SOLR"
          doc:description="Send documents to the SOLR quick search collection.  Payload must be a JSON-formatted
                           string consisting of an array of documents.  Each element of the array must be a JSON
                           object with property names corresponding to valid SOLR field names.">

        <jms:inbound-endpoint
                queue="solrQuickSearch.in"
                exchange-pattern="request-response"
                connector-ref="ActiveMQ-ACM"
                doc:name="JMS" />

        <timer-interceptor/>

        <echo-component doc:name="Echo"/>

        <https:outbound-endpoint ref="submitQuicksearchDocumentsSolrEndpoint"/>
    </flow>


</mule>