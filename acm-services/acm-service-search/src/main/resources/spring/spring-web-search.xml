<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="searchUiController" class="com.armedia.acm.plugins.search.web.SearchUiController">
        <property name="pageDescriptor" ref="searchPageDescriptor"/>
        <property name="searchDefProperties" ref="searchDef-properties" />
    </bean>

    <bean id="quickSearchAPIController" class="com.armedia.acm.plugins.search.web.api.QuickSearchAPIController">
        <property name="muleClient" ref="muleClient"/>
    </bean>
    <bean id="SearchChildrenAPIController" class="com.armedia.acm.plugins.search.web.api.SearchChildrenAPIController">
        <property name="muleClient" ref="muleClient"/>
    </bean>

    <bean id="searchDef-properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="file:${user.home}/.acm/searchDef.properties"/>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="localOverride" value="false"/>
        <property name="properties">
            <props>
            </props>
        </property>
    </bean>
</beans>

