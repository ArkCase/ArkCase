<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
    <bean id="costProperties" class="net.unicon.springframework.addons.properties.ReloadablePropertiesFactoryBean" >
        <property name="location" value="file:${user.home}/.acm/cost.properties"/>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>
    
    <bean id="costPropertyConfigurer" class="net.unicon.springframework.addons.properties.ReloadingPropertyPlaceholderConfigurer">
		<property name="properties" ref="costProperties"/>
	</bean>
    
    <bean id="startWorkflowEventsForCostsheet" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<value>com.armedia.acm.costsheet.submit</value>
			</list>
		</constructor-arg>
	</bean>
    
    <bean id="acmCostsheetDao" class="com.armedia.acm.services.costsheet.dao.AcmCostsheetDao" />
    <bean id="acmCostDao" class="com.armedia.acm.services.costsheet.dao.AcmCostDao" />
    
    <bean id="costsheetService" class="com.armedia.acm.services.costsheet.service.CostsheetServiceImpl">
    	<property name="properties" ref="costProperties" />
    	<property name="acmCostsheetDao" ref="acmCostsheetDao" />
    	<property name="submissionStatusesMap">
    		<map>
    			<entry key="Save" value="DRAFT" />
    			<entry key="Submit" value="IN_APPROVAL" />
    		</map>
    	</property>
    	<property name="executeSolrQuery" ref="executeSolrQuery" />
    	<property name="startWorkflowEvents" ref="startWorkflowEventsForCostsheet" />
    </bean>
    
    <bean id="costsheetWorkflowListener" class="com.armedia.acm.services.costsheet.service.CostsheetWorkflowListener">
		<property name="fileWorkflowBusinessRule" ref="fileWorkflowBusinessRule"/>
		<property name="activitiRuntimeService" ref="activitiRuntimeService"/>
	</bean>
    
    <bean id="costsheetToSolrTransformer" class="com.armedia.acm.services.costsheet.service.CostsheetToSolrTransformer">
		<property name="acmCostsheetDao" ref="acmCostsheetDao"/>
		<property name="costsheetService" ref="costsheetService"/>
	</bean>

    <bean id="acmCostsheetPlugin" class="com.armedia.acm.pluginmanager.model.AcmPlugin">
        <property name="pluginName" value="Cost Tracking Service Plugin"/>
        <property name="privileges">
            <list>
                <ref bean="costsheetPrivilege"/>
                <ref bean="costsheetCreatePrivilege"/>
                <ref bean="costsheetApprovePrivilege"/>
            </list>
        </property>
        <property name="urlPrivileges">
            <list>
                <bean id="costsheetUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/plugin/costsheet"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>

                <bean id="costsheetWizardUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/plugin/costsheet/wizard"/>
                    <property name="requiredPrivilege" ref="costsheetCreatePrivilege"/>
                </bean>
                
                <bean id="getCostsheetUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/costsheet/{id}"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>
                
                <bean id="getCostsheetsUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/costsheet"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>
                
                <bean id="getCostsheetsForUserUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/costsheet/user/{userId}"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>
                
                <bean id="getCostsheetsForObjectIdAndTypeUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/costsheet/objectId/{objectId}/objectType/{objectType}"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>
                
                <bean id="saveCostsheetUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="POST"/>
                    <property name="url" value="/api/{version}/service/costsheet"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>

                <bean id="getCostsheetByIdUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/plugin/costsheet/{costsheetId}"/>
                    <property name="requiredPrivilege" ref="costsheetPrivilege"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="costsheetCreatePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-costsheet-create"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_ANALYST</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>
    
    <bean id="costsheetApprovePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-costsheet-approve"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>

    <bean id="costsheetPrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-costsheet"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_ANALYST</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>

</beans>