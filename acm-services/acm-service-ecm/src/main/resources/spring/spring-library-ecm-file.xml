        <property name="activeMQConnectionFactory" ref="amqConnectionFactory"/>
        <property name="jmsTemplate" ref="jmsTemplate"/>
    </bean>

    <bean id="ecmFileService" class="com.armedia.acm.plugins.ecm.service.impl.EcmFileServiceImpl">
