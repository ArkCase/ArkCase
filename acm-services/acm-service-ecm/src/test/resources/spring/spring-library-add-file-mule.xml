<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="muleContextManager" class="com.armedia.acm.muletools.mulecontextmanager.MuleContextManager"
          destroy-method="shutdownBean">
        <property name="specificConfigFiles">
            <list>
                <value>/flows/MuleCmisConnectorFlow.xml</value>
                <value>/flows/addFileFlow.xml</value>
                <value>/flows/ecmFileTestFlow.xml</value>
                <value>/flows/downloadFileFlow.xml</value>
            </list>
        </property>
    </bean>

    <bean id="muleClient" factory-bean="muleContextManager" factory-method="getMuleClient" scope="prototype"/>

</beans>