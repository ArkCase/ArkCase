<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
    <bean id="timeProperties" class="net.unicon.springframework.addons.properties.ReloadablePropertiesFactoryBean" >
        <property name="location" value="file:${user.home}/.acm/time.properties"/>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>
    
    <bean id="timePropertyConfigurer" class="net.unicon.springframework.addons.properties.ReloadingPropertyPlaceholderConfigurer">
		<property name="properties" ref="timeProperties"/>
	</bean>
    
    <bean id="startWorkflowEventsForTimesheet" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<value>com.armedia.acm.timesheet.submit</value>
			</list>
		</constructor-arg>
	</bean>
    
    <bean id="acmTimesheetDao" class="com.armedia.acm.services.timesheet.dao.AcmTimesheetDao" />
    <bean id="acmTimeDao" class="com.armedia.acm.services.timesheet.dao.AcmTimeDao" />
	
	<bean id="timesheetService" class="com.armedia.acm.services.timesheet.service.TimesheetServiceImpl">
		<property name="properties" ref="timeProperties" />
		<property name="acmTimesheetDao" ref="acmTimesheetDao" />
		<property name="submissionStatusesMap">
			<map>
				<entry key="Save" value="DRAFT" />
				<entry key="Submit" value="IN_APPROVAL" />
			</map>
		</property>
		<property name="executeSolrQuery" ref="executeSolrQuery" />
		<property name="startWorkflowEvents" ref="startWorkflowEventsForTimesheet" />
	</bean>
	
	<bean id="timesheetEventPublisher" class="com.armedia.acm.services.timesheet.service.TimesheetEventPublisher" />
	
	<bean id="timesheetWorkflowListener" class="com.armedia.acm.services.timesheet.service.TimesheetWorkflowListener">
		<property name="fileWorkflowBusinessRule" ref="fileWorkflowBusinessRule"/>
		<property name="activitiRuntimeService" ref="activitiRuntimeService"/>
	</bean>
	
	<bean id="timesheetToSolrTransformer" class="com.armedia.acm.services.timesheet.service.TimesheetToSolrTransformer">
		<property name="acmTimesheetDao" ref="acmTimesheetDao"/>
		<property name="timesheetService" ref="timesheetService"/>
	</bean>

    <bean id="acmTimesheetPlugin" class="com.armedia.acm.pluginmanager.model.AcmPlugin">
        <property name="pluginName" value="Time Tracking Service Plugin"/>
        <property name="privileges">
            <list>
                <ref bean="timesheetPrivilege"/>
                <ref bean="timesheetCreatePrivilege"/>
                <ref bean="timesheetApprovePrivilege"/>
            </list>
        </property>
        <property name="urlPrivileges">
            <list>
                <bean id="timesheetUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/plugin/timesheet"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>

                <bean id="timesheetWizardUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/plugin/timesheet/wizard"/>
                    <property name="requiredPrivilege" ref="timesheetCreatePrivilege"/>
                </bean>
                
                <bean id="getTimesheetUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/timesheet/{id}"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>
                
                <bean id="getTimesheetsUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/timesheet"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>
                
                <bean id="getTimesheetsForUserUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/timesheet/user/{userId}"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>
                
                <bean id="getTimesheetsForObjectIdAndTypeUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/service/timesheet/objectId/{objectId}/objectType/{objectType}"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>
                
                <bean id="saveTimesheetUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="POST"/>
                    <property name="url" value="/api/{version}/service/timesheet"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>

                <bean id="getTimesheetByIdUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/plugin/timesheet/{timesheetId}"/>
                    <property name="requiredPrivilege" ref="timesheetPrivilege"/>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="timesheetCreatePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-timesheet-create"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_ANALYST</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>
    
    <bean id="timesheetApprovePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-timesheet-approve"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>

    <bean id="timesheetPrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-timesheet"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_ANALYST</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>

</beans>