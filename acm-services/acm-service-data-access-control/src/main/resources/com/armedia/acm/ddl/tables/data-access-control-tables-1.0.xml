<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="cmValueLength" value="4000" dbms="postgresql,oracle"/>
    <property name="cmValueLength" value="255" dbms="mysql"/>

    <property name="cmAccessDecisionReasonLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmAccessDecisionReasonLength" value="255" dbms="mysql"/>

    <property name="cmObjectTypeLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmObjectTypeLength" value="255" dbms="mysql"/>

    <property name="cmObjectStateLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmObjectStateLength" value="255" dbms="mysql"/>

    <property name="cmAccessLevelLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmAccessLevelLength" value="255" dbms="mysql"/>

    <property name="cmAccessorTypeLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmAccessorTypeLength" value="255" dbms="mysql"/>

    <property name="cmAccessorIdLength" value="1024" dbms="postgresql,oracle"/>
    <property name="cmAccessorIdLength" value="255" dbms="mysql"/>


    <changeSet id="01-data-access-acl-table" author="dmiller">
        <createTable tableName="acm_access_control_entry">
            <column name="cm_access_control_entry_id" type="${idType}" autoIncrement="${autoIncrement}">
                <constraints primaryKeyName="pk_acm_access_control_entry" primaryKey="true"/>
            </column>
            <column name="cm_object_type" type="VARCHAR(${cmObjectTypeLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_object_id" type="${fkIdType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_object_state" type="VARCHAR(${cmObjectStateLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_level" type="VARCHAR(${cmAccessLevelLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_accessor_type" type="VARCHAR(${cmAccessorTypeLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_accessor_id" type="VARCHAR(${cmAccessorIdLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_decision" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_decision_reason" type="VARCHAR(${cmAccessDecisionReasonLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_allow_discretionary_update" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="acm_access_control_decision_lu">
            <column name="cm_id" type="${idType}" autoIncrement="${autoIncrement}">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="pk_acl_decision"/>
            </column>
            <column name="cm_value" type="VARCHAR(${cmValueLength})">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_acl_decision_type"/>
            </column>
            <column name="cm_order" type="NUMBER(32,0)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_acl_decision_order"/>
            </column>
            <column name="cm_status" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_created" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_creator" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modified" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modifier" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="acm_access_control_reason_lu">
            <column name="cm_id" type="${idType}" autoIncrement="${autoIncrement}">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="pk_acl_reason"/>
            </column>
            <column name="cm_value" type="VARCHAR(${cmValueLength})">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_acl_reason_type"/>
            </column>
            <column name="cm_order" type="NUMBER(32,0)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_acl_reason_order"/>
            </column>
            <column name="cm_status" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_created" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_creator" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modified" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modifier" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="acm_boolean_lu">
            <column name="cm_id" type="${idType}" autoIncrement="${autoIncrement}">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="pk_boolean"/>
            </column>
            <column name="cm_value" type="VARCHAR(${cmValueLength})">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_boolean_type"/>
            </column>
            <column name="cm_order" type="NUMBER(32,0)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_boolean_order"/>
            </column>
            <column name="cm_status" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_created" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_creator" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modified" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_modifier" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="acm_access_control_entry" indexName="idx_access_control_object_id">
            <column name="cm_object_id"/>
            <column name="cm_object_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="02-data-access-add-audit-columns" author="dmiller">
        <addColumn tableName="acm_access_control_entry">
            <column name="cm_access_control_created" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_control_creator" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_control_modified" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_control_modifier" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="03-data-access-default-data-access-table" author="dmiller">
        <createTable tableName="acm_access_control_default">
            <column name="cm_access_control_default_id" type="${idType}" autoIncrement="${autoIncrement}">
                <constraints primaryKeyName="pk_acm_access_control_default" primaryKey="true"/>
            </column>
            <column name="cm_object_type" type="VARCHAR(${cmObjectTypeLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_object_state" type="VARCHAR(${cmObjectStateLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_level" type="VARCHAR(${cmAccessLevelLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_accessor_type" type="VARCHAR(${cmAccessorTypeLength})">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_decision" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_allow_discretionary_update" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="04-data-access-default-add-audit-columns" author="dmiller">
        <addColumn tableName="acm_access_control_default">
            <column name="cm_access_default_created" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_default_creator" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_default_modified" type="${timestampType}">
                <constraints nullable="false"/>
            </column>
            <column name="cm_access_default_modifier" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>