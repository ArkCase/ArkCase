<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="dataAccessPlugin" class="com.armedia.acm.pluginmanager.model.AcmPlugin">
        <property name="pluginName" value="Data Access Control Plugin"/>
        <property name="privileges">
            <list>
                <ref bean="listDefaultAccessPrivilege"/>
            </list>
        </property>
        <property name="urlPrivileges">
            <list>
                <ref bean="listDefaultAccessPrivilegeUrl"/>
            </list>
        </property>
    </bean>

    <bean id="listDefaultAccessPrivilegeUrl" class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
        <property name="httpMethod" value="GET"/>
        <property name="url" value="/api/{version}/plugin/dataaccess/accessControlDefaults"/>
        <property name="requiredPrivilege" ref="listDefaultAccessPrivilege"/>
    </bean>

    <bean id="listDefaultAccessPrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="listDefaultAccessPrivilege"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_ADMINISTRATOR</value>
            </list>
        </property>
    </bean>
    
    <bean id="acmAccessControlDefaultDao" class="com.armedia.acm.services.dataaccess.dao.AcmAccessControlDefaultDao"/>

    <bean id="dataAccessDefaultGenerator" class="com.armedia.acm.services.dataaccess.service.impl.DataAccessDefaultGeneratorImpl">
        <property name="allUserAccessDiscretionaryUpdateAllowed" value="true"/>
        <property name="allUsersAccess" value="DENY"/>
        <property name="allUsersIndicator" value="*"/>
        <property name="crudOperations">
            <list>
                <value>read</value>
                <value>update</value>
                <value>delete</value>
            </list>
        </property>
        <property name="generatorUserName" value="ACL_SYSTEM_USER"/>
        <property name="participantAccess" value="GRANT"/>
        <property name="participantAccessDiscretionaryUpdateAllowed" value="true"/>
    </bean>

    <bean id="dataAccessDefaultService" class="com.armedia.acm.services.dataaccess.service.impl.DataAccessDefaultServiceImpl">
        <property name="accessControlDefaultDao" ref="acmAccessControlDefaultDao"/>
        <property name="generator" ref="dataAccessDefaultGenerator"/>
    </bean>

    <bean id="dataAccessDefaultLauncher" class="com.armedia.acm.services.dataaccess.service.impl.DataAccessDefaultLauncher">
        <property name="dataAccessDefaultService" ref="dataAccessDefaultService"/>
    </bean>

</beans>