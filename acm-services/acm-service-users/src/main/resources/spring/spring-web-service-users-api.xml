<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="getUserInfoAPIController" class="com.armedia.acm.services.users.web.api.GetUserInfoAPIController"/>

    <bean id="findUsersWithPrivilegeAPIController"
          class="com.armedia.acm.services.users.web.api.FindUsersWithPrivilegeAPIController">
        <property name="pluginManager" ref="acmPluginManager"/>
        <property name="userDao" ref="userJpaDao"/>
    </bean>

    <bean id="findParticipantTypesForObjectTypeNameAPIController"
          class="com.armedia.acm.services.users.web.api.FindParticipantTypesForObjectTypeNameAPIController">
        <property name="acmApplication" ref="acmApplication"/>
    </bean>

    <bean id="getGroupAPIController" class="com.armedia.acm.services.users.web.api.group.GetGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="muleContextManager" ref="muleContextManager"/>
    </bean>

    <bean id="getGroupSupervisorAPIController"
          class="com.armedia.acm.services.users.web.api.group.GetGroupSupervisorAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="muleContextManager" ref="muleContextManager"/>
    </bean>

    <bean id="getGroupMembersAPIController"
          class="com.armedia.acm.services.users.web.api.group.GetGroupMembersAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="muleContextManager" ref="muleContextManager"/>
    </bean>

    <bean id="saveGroupAPIController" class="com.armedia.acm.services.users.web.api.group.SaveGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="groupService" ref="groupService"/>
    </bean>

    <bean id="removeGroupAPIController" class="com.armedia.acm.services.users.web.api.group.RemoveGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
    </bean>

    <bean id="saveSupervisorToGroupAPIController"
          class="com.armedia.acm.services.users.web.api.group.SaveSupervisorToGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="userDao" ref="userJpaDao"/>
    </bean>

    <bean id="saveMembersToGroupAPIController"
          class="com.armedia.acm.services.users.web.api.group.SaveMembersToGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="userDao" ref="userJpaDao"/>
        <property name="groupService" ref="groupService"/>
    </bean>

    <bean id="removeSupervisorFromGroupAPIController"
          class="com.armedia.acm.services.users.web.api.group.RemoveSupervisorFromGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
    </bean>

    <bean id="removeMembersFromGroupAPIController"
          class="com.armedia.acm.services.users.web.api.group.RemoveMembersFromGroupAPIController">
        <property name="groupDao" ref="groupDao"/>
        <property name="groupService" ref="groupService"/>
    </bean>

    <bean id="getUsersByGroupAPIController" class="com.armedia.acm.services.users.web.api.GetUsersByGroupAPIController">
        <property name="executeSolrQuery" ref="executeSolrQuery"/>
    </bean>

    <bean id="ldapUserAPIController" class="com.armedia.acm.services.users.web.api.LdapUserAPIController">
        <property name="ldapUserService" ref="ldapUserService"/>
    </bean>

    <bean id="ldapGroupAPIController" class="com.armedia.acm.services.users.web.api.group.LdapGroupAPIController">
        <property name="ldapGroupService" ref="ldapGroupService"/>
    </bean>

    <bean id="baseLdapController" class="com.armedia.acm.services.users.web.api.SecureLdapController">
        <property name="acmContextHolder" ref="acmContextHolder"/>
    </bean>
</beans>