<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="drlDeployFolder" class="java.io.File">
        <constructor-arg value="${user.home}/.acm/rules"/>
    </bean>

    <bean id="drlResourceExpression" class="java.lang.String">
        <constructor-arg value="classpath*:/rules/*.xlsx"/>
    </bean>

    <bean id="drlPathMatchingResolver" class="org.springframework.core.io.support.PathMatchingResourcePatternResolver"/>

    <bean id="drlDeployer" class="com.armedia.acm.spring.SpringClasspathCopier">
        <property name="resourcePattern" ref="drlResourceExpression"/>
        <property name="deployFolder" ref="drlDeployFolder"/>
        <property name="resolver" ref="drlPathMatchingResolver"/>
    </bean>

</beans>