<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
    <bean id="ebriefFactory" class="com.armedia.acm.form.ebrief.service.EbriefFactory">
    	<property name="userDao" ref="userJpaDao" />
    	<property name="acmParticipantDao" ref="acmParticipantDao" />
    </bean>
    
    <bean id="ebriefService" class="com.armedia.acm.form.ebrief.service.EbriefService">
    	<property name="ebriefFactory" ref="ebriefFactory" />
    	<property name="ecmFileDao" ref="ecmFileDao" />
    	<property name="ecmFileService" ref="ecmFileService" />
    </bean>
    
    <bean id="ebriefUpdatedListener" class="com.armedia.acm.form.ebrief.service.EbriefUpdatedListener">
    	<property name="properties" ref="acm-forms-properties" />
    	<property name="ebriefService" ref="ebriefService" />
    </bean>

</beans>