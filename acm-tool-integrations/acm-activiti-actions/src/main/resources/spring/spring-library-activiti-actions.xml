<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="startBusinessProcessAction" class="com.armedia.acm.event.AcmAction">
        <property name="actionId" value="START_BUSINESS_PROCESS"/>
        <property name="actionName" value="Start Business Process"/>
        <property name="targetMuleEndpoint" value="jms://startBusinessProcessQueue"/>
        <property name="parameters">
            <list>
                <value>processDefinitionKey</value>
            </list>
        </property>

    </bean>

    <bean id="sendQuickSearchTaskRecordsToSolrAction" class="com.armedia.acm.event.AcmAction">
        <property name="actionId" value="SEND_QUICKSEARCH_RECORDS_TO_SOLR"/>
        <property name="actionName" value="Send Quick Search Records to SOLR"/>
        <property name="targetMuleEndpoint" value="jms://solrTaskToQuickSearch.in"/>
        <property name="parameters">
            <list/>
        </property>

    </bean>

    <bean id="sendAdvancedSearchTaskRecordsToSolrAction" class="com.armedia.acm.event.AcmAction">
        <property name="actionId" value="SEND_ADVANCED_SEARCH_RECORDS_TO_SOLR"/>
        <property name="actionName" value="Send Advanced Search Records to SOLR"/>
        <property name="targetMuleEndpoint" value="jms://solrTaskToAdvancedSearch.in"/>
        <property name="parameters">
            <list/>
        </property>

    </bean>

    <bean id="startBusinessProcessImpl" class="com.armedia.acm.activiti.StartBusinessProcess">
        <property name="runtimeService" ref="activitiRuntimeService"/>
    </bean>



</beans>