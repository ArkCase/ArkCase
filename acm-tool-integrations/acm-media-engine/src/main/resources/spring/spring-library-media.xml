<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="mediaEngineToolsService" class="com.armedia.acm.tool.mediaengine.service.MediaEngineIntegrationServiceImpl">
        <property name="mediaEngineToolServiceFactory" ref="mediaEngineToolServiceFactory"/>
    </bean>

    <bean id="mediaEngineToolServiceFactory" class="com.armedia.acm.tool.mediaengine.factory.MediaEngineServiceFactory">
        <property name="serviceProviderFactory" ref="mediaEngineServiceFactories"/>
    </bean>

    <bean id="mediaEngineServiceFactories" class="java.util.HashMap">
        <constructor-arg>
            <map key-type="java.lang.String" value-type="com.armedia.acm.tool.mediaengine.factory.MediaEngineProviderFactory">
                <entry key="OCR" value-ref="ocrProviderFactory"/>
                <entry key="TRANSCRIBE" value-ref="transcribeProviderFactory"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="mediaEngineIntegrationEventPublisher" class="com.armedia.acm.tool.mediaengine.service.MediaEngineIntegrationEventPublisher"/>

</beans>