<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
    <context:property-placeholder
        properties-ref="acm-reports-properties"
        ignore-unresolvable="true"
        local-override="false"
        order="1"/>
    	   
    <bean id="reportResource" class="com.armedia.acm.pentaho.config.PentahoReportUrl">
        <property name="reportsProperties" ref="acm-reports-properties"/>
    </bean>

    <bean id="acm-reports-properties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="file:${user.home}/.acm/acm-reports.properties"/>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="localOverride" value="false"/>
        <property name="properties">
            <props>
            </props>
        </property>    
    </bean>
    
</beans>