<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="pdfService" class="com.armedia.acm.pdf.service.PdfServiceImpl"/>

    <bean id="pdfDocumentGenerator" class="com.armedia.acm.pdf.PDFDocumentGenerator" abstract="true">
        <property name="ecmFileService" ref="ecmFileService"/>
        <property name="pdfService" ref="pdfService"/>
        <property name="ecmFileDao" ref="ecmFileDao"/>
    </bean>
</beans>