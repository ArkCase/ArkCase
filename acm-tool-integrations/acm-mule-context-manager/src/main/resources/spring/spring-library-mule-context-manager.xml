<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="muleContextManager" class="com.armedia.acm.muletools.mulecontextmanager.MuleContextManager"
          destroy-method="shutdownBean">
        <property name="muleConfigFilePattern" value="classpath*:flows/*Flow.xml"/>
    </bean>

    <bean id="muleClient" factory-bean="muleContextManager" factory-method="getMuleClient" scope="prototype"/>
</beans>
