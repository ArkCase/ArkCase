<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:hz="http://www.hazelcast.com/schema/spring"
    xmlns:cache="http://www.springframework.org/schema/cache"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.hazelcast.com/schema/spring http://www.hazelcast.com/schema/spring/hazelcast-spring.xsd
                http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd">
    <!--    <context:annotation-config/>-->
    <!--    <bean class="org.springframework.session.hazelcast.config.annotation.web.http.HazelcastHttpSessionConfiguration"/>-->
    <!--    <import resource="file:${user.home}/.arkcase/acm/hazelcast-config.xml"/>-->

    <hz:hazelcast id="acmHazelcastInstance">
        <hz:config>
            <hz:instance-name>acmHazelcastInstance</hz:instance-name>
            <hz:management-center enabled="true" url="http://arkcase-host:8880/hazelcast-mancenter"
                update-interval="3"/>
            <hz:properties>
                <hz:property name="hazelcast.logging.type">slf4j</hz:property>
                <hz:property name="hazelcast.log.state">true</hz:property>
                <hz:property name="hazelcast.diagnostics.enabled">true</hz:property>
                <!-- set true if instances can be on any network interface-->
                <hz:property name="hazelcast.socket.bind.any">true</hz:property>
            </hz:properties>
            <hz:network port="5071" port-auto-increment="false">
                <hz:join>
                    <hz:multicast enabled="false">
                    </hz:multicast>
                    <hz:tcp-ip enabled="true">
                        <hz:members>192.168.56.1,192.168.56.201,192.168.56.202</hz:members>
                    </hz:tcp-ip>
                    <hz:aws enabled="false"/>
                </hz:join>
                <!-- On which network interfaces to bind-->
                <hz:interfaces enabled="true">
                    <hz:interface>192.168.56.1</hz:interface>
                </hz:interfaces>
            </hz:network>
            <hz:map name="default"
                backup-count="0" max-size="0"
                time-to-live-seconds="25"
                eviction-policy="LRU"/>

            <hz:map name="authentication-cache"
                backup-count="0" max-size="0"
                time-to-live-seconds="3600"
                eviction-policy="LFU"/>

            <hz:map name="outlook-connection-cache"
                backup-count="0" max-size="0"
                time-to-live-seconds="3600"
                eviction-policy="LRU"/>

            <hz:map name="quiet-user-cache"
                backup-count="0" max-size="0"
                time-to-live-seconds="7200"
                eviction-policy="LRU"/>

            <hz:map name="sessions-map"
                backup-count="2" max-size="0"
                time-to-live-seconds="1800"
                eviction-policy="NONE"/>

        </hz:config>
    </hz:hazelcast>

    <bean id="cacheManager" class="com.hazelcast.spring.cache.HazelcastCacheManager">
        <constructor-arg ref="acmHazelcastInstance"/>
    </bean>

    <cache:annotation-driven/>
</beans>