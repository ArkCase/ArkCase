<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.armedia.acm.configuration.api,
                                          com.armedia.acm.configuration.client,
                                          com.armedia.acm.configuration.core,
                                          com.armedia.acm.configuration.scope,
                                          com.armedia.acm.configuration.service,
                                          com.armedia.acm.configuration.yaml,
                                          com.armedia.acm.configuration.refresher.jms,
                                          com.armedia.acm.configuration.refresher.jmx,
                                          com.armedia.acm.configuration.annotations"/>

    <bean id="fileConfigurationServiceImpl" class="com.armedia.acm.configuration.service.FileConfigurationServiceImpl">
        <property name="customFilesLocation" value="#{ systemProperties ['user.home'] }/.arkcase/custom/"/>
        <property name="configurationClientConfig" ref="configurationClientConfig"/>
        <property name="configRestTemplate" ref="configRestTemplate"/>
    </bean>

    <bean id="brandingFileConfigurationService"
        class="com.armedia.acm.configuration.core.initialization.CustomFilesConfigurationInitialization">
        <property name="customFilesLocation" value="#{ systemProperties ['user.home'] }/.arkcase/custom/"/>
        <property name="fileConfigurationService" ref="fileConfigurationServiceImpl"/>
        <property name="customFolder" value="branding"/>
        <property name="customFiles">
            <list value-type="java.lang.String">
                <value>header-logo.png</value>
                <value>login-logo.png</value>
                <value>email-logo.png</value>
                <value>custom.css</value>
            </list>
        </property>
    </bean>

    <bean id="rulesFileConfigurationService"
          class="com.armedia.acm.configuration.core.initialization.CustomFilesConfigurationInitialization">
        <property name="customFilesLocation" value="#{ systemProperties ['user.home'] }/.arkcase/acm/"/>
        <property name="fileConfigurationService" ref="fileConfigurationServiceImpl"/>
        <property name="customFolder" value="rules"/>
        <property name="customFiles">
            <list value-type="java.lang.String">
                <value>drools-access-control-rules.xlsx</value>
                <value>drools-assignment-rules.xlsx</value>
                <value>drools-billing-invoice-rules.xlsx</value>
                <value>drools-case-file-rules.xlsx</value>
                <value>drools-complaint-number-rules.xlsx</value>
                <value>drools-costsheet-rules.xlsx</value>
                <value>drools-document-repository-rules.xlsx</value>
                <value>drools-enter-queue-rules.xlsx</value>
                <value>drools-form-business-process-rules.xlsx</value>
                <value>drools-leave-current-queue-rules.xlsx</value>
                <value>drools-next-possible-queues-rules.xlsx</value>
                <value>drools-ocr-business-process-rules.xlsx</value>
                <value>drools-ocr-rules.xlsx</value>
                <value>drools-on-enter-queue-rules.xlsx</value>
                <value>drools-on-leave-queue-rules.xlsx</value>
                <value>drools-participant-assignment-rules.xlsx</value>
                <value>drools-split-case-file-rules.xlsx</value>
                <value>drools-start-business-process-rules.xlsx</value>
                <value>drools-task-rules.xlsx</value>
                <value>drools-timesheet-rules.xlsx</value>
                <value>drools-transcribe-business-process-rules.xlsx</value>
                <value>drools-transcribe-rules.xlsx</value>
            </list>
        </property>
    </bean>

    <bean id="configurationClientConfig" class="com.armedia.acm.configuration.model.ConfigurationClientConfig">
    </bean>

</beans>