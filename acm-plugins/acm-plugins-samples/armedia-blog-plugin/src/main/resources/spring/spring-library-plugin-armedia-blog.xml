<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="acmSampleBlogPlugin" class="com.armedia.acm.pluginmanager.AcmPlugin">
        <property name="pluginName" value="armediaBlogPlugin"/>
        <property name="navigatorTab" value="true"/>
        <property name="navigatorTabName" value="Armedia Blog"/>
        <property name="homeUrl" value="/plugin/sample/armediaBlog"/>
        <property name="enabled" value="true"/>
        <property name="pluginImage" value="i-pencil"/>
    </bean>

</beans>
