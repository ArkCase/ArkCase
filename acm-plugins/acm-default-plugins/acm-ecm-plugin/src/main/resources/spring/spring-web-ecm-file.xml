<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="fileUploadController" class="com.armedia.acm.plugins.ecm.web.FileUploadController">
        <property name="ecmFileService" ref="ecmFileService"/>
    </bean>

    <bean id="fileDownloadAPIController" class="com.armedia.acm.plugins.ecm.web.api.FileDownloadAPIController">
        <property name="errorManager" ref="acmSpringMvcErrorManager"/>
        <property name="muleClient" ref="muleClient"/>
        <property name="fileDao" ref="ecmFileDao"/>
    </bean>
</beans>