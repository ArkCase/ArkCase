<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="acmDiffBeanConfiguration" class="org.apache.commons.io.IOUtils" factory-method="toString">
        <constructor-arg type="java.io.InputStream" value="classpath:config/acmObjectDiffSettings.json"/>
    </bean>

    <bean id="acmObjectDiffUtils" class="com.armedia.acm.objectdiff.AcmObjectDiffUtils">
        <property name="configurationMap" ref="acmDiffBeanConfiguration"/>
    </bean>

    <bean id="personDiff" class="com.armedia.acm.plugins.person.service.PersonDiff">
        <property name="acmObjectChangeUtils" ref="acmObjectDiffUtils"/>
    </bean>
</beans>