<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="acmPersonDao" class="com.armedia.acm.plugins.person.dao.PersonDao"/>
    <bean id="acmPersonAliasDao" class="com.armedia.acm.plugins.person.dao.PersonAliasDao"/>
    <bean id="acmPersonAssociationDao" class="com.armedia.acm.plugins.person.dao.PersonAssociationDao"/>
    <bean id ="acmOrganizationDao" class ="com.armedia.acm.plugins.person.dao.OrganizationDao"/>
          
    <bean id="personTypeTable" class="com.armedia.acm.configuration.LookupTableDescriptor">
        <property name="tableName" value="acm_person_type_lu"/>
        <property name="description" value="Valid person types."/>
    </bean>
    
    <bean id="savePersonTransaction" class="com.armedia.acm.plugins.person.service.SavePersonTransaction">
        <property name="muleClient" ref="muleClient"/>
    </bean>
    
    <bean id="personEventPublisher" class="com.armedia.acm.plugins.person.service.PersonEventPublisher"/>
    
    <bean id="savePersonAssociationTransaction" class="com.armedia.acm.plugins.person.service.SavePersonAssociationTransaction">
        <property name="muleClient" ref="muleClient"/>
    </bean>
    
    <bean id="personAssociationEventPublisher" class="com.armedia.acm.plugins.person.service.PersonAssociationEventPublisher"/>

    <bean id="personToSolrTransformer" class="com.armedia.acm.plugins.person.service.PersonToSolrTransformer">
        <property name="personDao" ref="acmPersonDao"/>
    </bean>
    <bean id="organizationToSolrTransformer" class="com.armedia.acm.plugins.person.service.OrganizationToSolrTransformer">
        <property name="organizationDao" ref="acmOrganizationDao"/>
    </bean>
    
    <bean id="personAssociationToSolrTransformer" class="com.armedia.acm.plugins.person.service.PersonAssociationToSolrTransformer">
        <property name="personAssociationDao" ref="acmPersonAssociationDao"/>
    </bean>
            
    <bean id ="personPlugin" class="com.armedia.acm.pluginmanager.model.AcmPlugin">
        <property name="pluginName" value="Person Plugin"/>
        <property name="privileges">            
            <list>
                <ref bean="acmPersonSavePrivilege"/>
                <ref bean="acmPersonFindPrivilege"/>
                <ref bean="acmPersonDeletePrivilege"/>
                <ref bean="acmPersonAssociationDeletePrivilege"/>
                <ref bean="acmPersonListPrivilege"/>
                <ref bean="acmPersonTypesPrivilege"/>
            </list>
            
        </property>
        <property name="urlPrivileges">
            <list>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="POST"/>
                    <property name="url" value="/api/{version}/plugin/person"/>
                    <property name="requiredPrivilege" ref="acmPersonSavePrivilege"/>
                </bean>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/plugin/person/find"/>
                    <property name="requiredPrivilege" ref="acmPersonFindPrivilege"/>
                </bean>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="DELETE"/>
                    <property name="url" value="/api/{version}/plugin/person/delete/{personId}"/>
                    <property name="requiredPrivilege" ref="acmPersonDeletePrivilege"/>                        
                </bean>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="DELETE"/>
                    <property name="url" value="/api/{version}/plugin/personAssociation/delete/{personAssocId}"/>
                    <property name="requiredPrivilege" ref="acmPersonAssociationDeletePrivilege"/>
                </bean>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/plugin/person/list/{parentType}/{parentId}"/>
                    <property name="requiredPrivilege" ref="acmPersonListPrivilege"/>                        
                </bean>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="GET"/>
                    <property name="url" value="/api/{version}/plugin/person/types"/>
                    <property name="requiredPrivilege" ref="acmPersonTypesPrivilege"/>                        
                </bean>                
            </list>

        </property>
            
    </bean>
    
            
    <bean id ="personAssociationPlugin" class="com.armedia.acm.pluginmanager.model.AcmPlugin">
        <property name="pluginName" value="PersonAssocaition Plugin"/>
        <property name="privileges">            
            <list>
                <ref bean="acmPersonAssociationSavePrivilege"/>
            </list>
        </property>
        <property name="urlPrivileges">
            <list>
                <bean class="com.armedia.acm.pluginmanager.model.AcmPluginUrlPrivilege">
                    <property name="httpMethod" value="POST"/>
                    <property name="url" value="/api/{version}/plugin/personAssociation"/>
                    <property name="requiredPrivilege" ref="acmPersonAssociationSavePrivilege"/>                        
                </bean>                 
            </list>
        </property>
    </bean>
        
    <bean id="acmPersonSavePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-person-save"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>
            </list>
        </property>
    </bean>

    <bean id="acmPersonFindPrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-person-find"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_ANALYST</value>
            </list>
        </property>
    </bean>
    
    <bean id="acmPersonDeletePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-person-delete"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>                
            </list>
        </property>
    </bean>

    <bean id="acmPersonAssociationDeletePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-person-association-delete"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>
            </list>
        </property>
    </bean>
    
    <bean id="acmPersonListPrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-person-List"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_ANALYST</value>
            </list>
        </property>
    </bean>
    
    <bean id="acmPersonTypesPrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-person-values"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>
                <value>ROLE_ANALYST</value>
            </list>
        </property>
    </bean>
    
    <bean id="acmPersonAssociationSavePrivilege" class="com.armedia.acm.pluginmanager.model.AcmPluginPrivilege">
        <property name="privilegeName" value="acm-personAssociation-save"/>
        <property name="applicationRolesWithPrivilege">
            <list>
                <value>ROLE_INVESTIGATOR_SUPERVISOR</value>
                <value>ROLE_CALLCENTER</value>
                <value>ROLE_ADMINISTRATOR</value>
                <value>ROLE_INVESTIGATOR</value>
            </list>
        </property>
    </bean>
</beans>