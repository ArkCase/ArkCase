    </bean>

    <bean id="ldapDirectoryServerTemplateConfigAPIController"
          class="com.armedia.acm.plugins.admin.web.api.LdapTemplateConfigurationAPIController">
        <property name="ldapConfigurationService" ref="ldapConfigurationService"/>
    </bean>
</beans>