<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="caseFileQueuePipelineContext"
          class="com.armedia.acm.plugins.casefile.pipeline.CaseFileQueuePipelineContext"/>

    <bean id="queueCaseFilePipelineManager"
          class="com.armedia.acm.plugins.casefile.pipeline.QueueCaseFilePipelineManager">
        <property name="pipelineContext" ref="caseFileQueuePipelineContext"/>
        <property name="preSaveHandlers">
            <list/>
        </property>
        <property name="postSaveHandlers">
            <list/>
        </property>
    </bean>

    <bean id="queueCaseService" class="com.armedia.acm.plugins.casefile.service.QueueCaseServiceImpl">
        <property name="queuePipelineManager" ref="queueCaseFilePipelineManager"/>
        <property name="caseFileDao" ref="caseFileDao"/>
    </bean>

</beans>