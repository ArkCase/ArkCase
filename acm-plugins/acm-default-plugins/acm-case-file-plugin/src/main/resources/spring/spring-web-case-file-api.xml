<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="saveCaseFileAPIController" class="com.armedia.acm.plugins.casefile.web.api.SaveCaseFileAPIController">
        <property name="saveCaseService" ref="saveCaseService"/>
    </bean>

    <bean id="findCaseByIdAPIController" class="com.armedia.acm.plugins.casefile.web.api.FindCaseByIdAPIController">
        <property name="caseFileDao" ref="caseFileDao"/>
    </bean>

    <bean id="getCasesByStatusAPIController" class="com.armedia.acm.plugins.casefile.web.api.GetCasesByStatusAPIController">
        <property name="caseFileDao" ref="caseFileDao"/>
    </bean>

    <bean id="listCaseFilesByUserAPIController" class="com.armedia.acm.plugins.casefile.web.api.ListCaseFilesByUserAPIController">
        <property name="caseFileDao" ref="caseFileDao"/>
        <property name="caseFileEventUtility" ref="caseFileEventUtility"/>
    </bean>

    <bean id="getCaseFileStatusSummaryAPIController" class="com.armedia.acm.plugins.casefile.web.api.GetCaseFileStatusSummaryAPIController">
        <property name="caseFileDao" ref="caseFileDao"/>
        <property name="caseFileEventUtility" ref="caseFileEventUtility"/>
    </bean>

    <bean id="addCaseFileController" class="com.armedia.acm.plugins.casefile.web.api.AddFileToCaseAPIController">
        <property name="caseFileDao" ref="caseFileDao"/>
        <property name="ecmFileService" ref="ecmFileService"/>
    </bean>
</beans>